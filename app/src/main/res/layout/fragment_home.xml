<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/common">

        <Button
            android:id="@+id/heart_icon"
            android:layout_width="101dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/emergency"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/hear1tText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/he"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="-279dp"
            android:layout_marginBottom="7dp"
            android:layout_toLeftOf="@+id/heartText"
            android:text="Blood Donation"
            android:textColor="#2CA7E0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/he"
            android:layout_width="96dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/heart_icon"
            android:layout_toRightOf="@+id/heart_icon"
            android:background="@drawable/heart1" />

        <TextView
            android:id="@+id/heartText"
            android:layout_width="136dp"
            android:layout_height="28dp"
            android:layout_below="@+id/heart_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="158dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="2dp"
            android:text="Emergency"
            android:textColor="#2CA7E0"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="160dp"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common">

        <Button
            android:id="@+id/ambulance_icon"
            android:layout_width="73dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/transparent"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="3dp"
            android:text="Ambulance Services"
            android:textColor="#2CA7E0"
            android:textSize="20sp" />
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/common"
        android:layout_width="347dp"
        android:layout_marginTop="275dp"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp">

        <Button
            android:id="@+id/hospitalDetails"
            android:layout_width="72dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/hospitalinfo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="19dp"
            android:text="Hospital Info"
            android:textColor="#2CA7E0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tracer"
            android:layout_width="69dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="50dp"
            android:layout_toRightOf="@+id/hospitalDetails"
            android:background="@drawable/gps" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="GPS"
            android:textColor="#2CA7E0"
            android:textSize="20sp" />
    </RelativeLayout>


</RelativeLayout>

